          <!-- Review Information -->
          <div class="flex flex-col pb-8 border-grayed border-b-2">
            <!-- Dynamically load this using JavaScript -->
            <p>
              Kevin Eleven: 
              <i class="fa-solid fa-toilet-paper fa-rotate-270 text-gold"></i>
              <i class="fa-solid fa-toilet-paper fa-rotate-270 text-gold"></i>
              <i class="fa-solid fa-toilet-paper fa-rotate-270 text-gold"></i>
              <i class="fa-solid fa-toilet-paper fa-rotate-270 text-grayed"></i>
              <i class="fa-solid fa-toilet-paper fa-rotate-270 text-grayed"></i>
